<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="fill_parent"
    android:background="@color/gray_bg_main"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:paddingLeft="10dp" 
        android:paddingTop="10dp">

        <!--  <com.infzm.slidingmenu.demo.view.CircleImageView-->
        <ImageView
           
            android:id="@+id/profile_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/menu_icn_head"
           />

        <TextView
            android:id="@+id/tvMainUserName"
            android:layout_width="match_parent"
            android:layout_height="28.0dip"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/profile_image"
            android:gravity="center_vertical"
            android:paddingLeft="15.0dip"
            android:text="易发用户"
            android:textColor="@color/black"
            android:textSize="14.0sp" />

    </RelativeLayout>
<View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_font" />
    <TextView
        android:id="@+id/tvMapIndexMenuFaHuoJiLu"
        android:layout_width="match_parent"
        android:layout_height="50.0dip"
        android:clickable="true"
        android:drawablePadding="1.0dip"
        android:gravity="center_vertical"
        android:paddingLeft="15.0dip"
        android:paddingRight="10.0dip"
        android:text="发货记录"
         android:textColor="@color/black"
        android:textSize="16.0sp" />
    <TextView
        android:id="@+id/tvMapIndexMenuZhouBian"
        android:layout_width="match_parent"
        android:layout_height="50.0dip"
        android:clickable="true"
        android:drawablePadding="1.0dip"
        android:gravity="center_vertical"
        android:paddingLeft="15.0dip"
        android:paddingRight="10.0dip"
        android:text="周边配货站"
         android:textColor="@color/black"
        android:textSize="16.0sp" />
        <TextView
        android:id="@+id/tvMapIndexMenuWuLiuFee"
        android:layout_width="match_parent"
        android:layout_height="50.0dip"
        android:clickable="true"
        android:drawablePadding="1.0dip"
        android:gravity="center_vertical"
        android:paddingLeft="15.0dip"
        android:paddingRight="10.0dip"
        android:text="物流费用"
         android:textColor="@color/black"
        android:textSize="16.0sp" />


    <TextView
         android:id="@+id/tvMapIndexMenuWoDe"
        android:layout_width="match_parent"
        android:layout_height="50.0dip"
        android:clickable="true"
        android:drawablePadding="1.0dip"
        android:gravity="center_vertical"
        android:paddingLeft="15.0dip"
        android:paddingRight="10.0dip"
        android:text="我的积分"
         android:textColor="@color/black"
        android:textSize="16.0sp" />



    <TextView
         android:id="@+id/tvMapIndexMenuXiaoXi"
        android:layout_width="match_parent"
        android:layout_height="50.0dip"
        android:clickable="true"
        android:drawablePadding="1.0dip"
        android:gravity="center_vertical"
        android:paddingLeft="15.0dip"
        android:paddingRight="10.0dip"
        android:text="消息中心"
         android:textColor="@color/black"
        android:textSize="16.0sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_font" />

    <TextView
        android:id="@+id/tvMapIndexMenufenxiangyoujiang"
        android:layout_width="match_parent"
        android:layout_height="50.0dip"
        android:clickable="true"
        android:drawablePadding="1.0dip"
        android:gravity="center_vertical"
        android:paddingLeft="15.0dip"
        android:paddingRight="10.0dip"
        android:text="分享有奖"
        android:textColor="@color/black"
        android:textSize="16.0sp" />

    <TextView
         android:id="@+id/tvMapIndexMenuJiFen"
        android:layout_width="match_parent"
        android:layout_height="50.0dip"
        android:clickable="true"
        android:drawablePadding="1.0dip"
        android:gravity="center_vertical"
        android:paddingLeft="15.0dip"
        android:paddingRight="10.0dip"
        android:text="联系我们"
        android:visibility="gone"
         android:textColor="@color/black"
        android:textSize="16.0sp" />
    

<View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_font" />
    <TextView
         android:id="@+id/tvMapIndexMenuSheZhi"
        android:layout_width="match_parent"
        android:layout_height="50.0dip"
        android:clickable="true"
        android:drawablePadding="1.0dip"
        android:gravity="center_vertical"
        android:paddingLeft="15.0dip"
        android:paddingRight="10.0dip"
        android:text="设置"
         android:textColor="@color/black"
        android:textSize="16.0sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_font" />
	
</LinearLayout>