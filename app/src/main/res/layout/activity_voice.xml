<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg_main"
    tools:context=".VoiceActivity" >

      <include 
            android:id="@+id/menu"
            layout="@layout/view_title"/>
      <EditText 
          android:id="@+id/ETVoiceInput"
          android:layout_below="@id/menu"
          android:layout_width="match_parent"
          android:layout_height="200dp"
          android:layout_margin="15dp"
          android:hint="请说出您的需求"
          android:padding="5dp"
          
          android:background="@drawable/yueyue_list_bg"
          />
       <ImageView 
           android:id="@+id/animationIV"  
            android:layout_width="wrap_content"  
            android:layout_height="wrap_content"  
          android:layout_centerHorizontal="true"
          android:layout_margin="10dp"
            android:layout_below="@id/ETVoiceInput"
            android:src="@anim/voice_animation"/>   
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/orange_main"
                android:text="点击重新录入语音"
                android:layout_below="@+id/animationIV"
                android:layout_centerHorizontal="true"
                />
<TextView
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/orange_main"
    android:layout_margin="25dp"
    android:text="确认发送"
    android:gravity="center"
    android:textSize="@dimen/activity_title_size"
    android:textColor="@color/white"
    android:layout_alignParentBottom="true"
     />
</RelativeLayout>
