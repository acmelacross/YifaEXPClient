<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e1e1e1"
  
     >
<RelativeLayout
        android:id="@+id/actPoiTitle"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@color/gray_bg_main"
    android:layout_alignParentTop="true"
     >
    <ImageView 
        android:id="@+id/imgvPoiTitleBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_title_bar"
        android:layout_margin="5dp"
        />
        <TextView 
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_centerVertical="true"
    android:text="预约发货"
    android:gravity="center"
    android:textSize="@dimen/activity_title_size"
    />
    </RelativeLayout>
    <RelativeLayout 
        android:id="@+id/rlYuYueTime"
        android:layout_below="@id/actPoiTitle"
         android:layout_width="match_parent"
   		 android:layout_height="65dp"
   		 android:background="@drawable/yueyue_list_bg"
   		 android:layout_margin="25dp"
        >
        <TextView 
            android:id="@+id/ztempTV"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="什么时候发货"
            android:textColor="@color/gray_font"
            android:textSize="19.5sp"
            android:gravity="center_vertical"
           android:paddingLeft="10dp"
            />
        <ImageView 
            android:layout_height="38dp"
            android:layout_width="38dp"
            android:background="@drawable/btn_yuyue_input_time"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/ztempTV"
            />
    </RelativeLayout>
       <RelativeLayout 
        android:id="@+id/rlYuYueAddress"
        android:layout_below="@id/rlYuYueTime"
         android:layout_width="match_parent"
   		 android:layout_height="120dp"
   		 android:layout_marginLeft="25dp"
   		 android:layout_marginRight="25dp"
        >
		<RelativeLayout
		 android:id="@+id/rl2YuYueAddress"   
		 android:layout_width="match_parent"
   		 android:layout_height="60dp"
   		 android:background="@drawable/yueyue_list_bg_top"
   		  >
   		  <ImageView 
   		       android:id="@+id/ztempImgStart"
   		      android:layout_width="23dp"
   		      android:layout_height="30dp"
   		      android:background="@drawable/ic_yuyue_type_start"
   		      android:layout_centerVertical="true"
   		      android:layout_marginLeft="95dp"
   		       android:layout_marginRight="15dp"
   		      />
   		  	    <TextView 
   		  	        android:id="@+id/tvYuyueStart"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:text="货从哪里发"
		        android:gravity="center_vertical"
		        android:layout_toRightOf="@id/ztempImgStart"
		        android:textColor="@color/gray_font"
		        android:layout_centerVertical="true"
		        android:textSize="19.5sp"
		        />
   		  </RelativeLayout>
   		  <View 
   		      android:id="@+id/ztempLine"
   		       android:layout_width="match_parent"
   			 android:layout_height="1px"
   			 android:background="@color/gray_font"
   			 android:layout_marginRight="5dp"
   			 android:layout_marginLeft="50dp"
   			 android:layout_below="@id/rl2YuYueAddress"
   		      />
   		  <RelativeLayout
		 android:id="@+id/rl3YuYueAddress"   
		 android:layout_width="match_parent"
   		 android:layout_height="60dp"
   		 android:layout_below="@id/ztempLine"
   		 android:background="@drawable/yueyue_list_bg_bottom"
   		  >
		    <ImageView 
		        android:id="@+id/ztempImgEnd"
   		      android:layout_width="23dp"
   		      android:layout_height="30dp"
   		      android:background="@drawable/ic_yuyue_type_end"
   		      android:layout_centerVertical="true"
   		         android:layout_marginLeft="95dp"
   		         android:layout_marginRight="15dp"
   		      />
		    <TextView 
		        android:id="@+id/tvYuyueEnd"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:text="货到哪里去"
		        android:layout_toRightOf="@id/ztempImgEnd"
		        android:textColor="@color/gray_font"
		        android:layout_centerVertical="true"
		        android:gravity="center_vertical"
		        android:textSize="19.5sp"
		        />
		</RelativeLayout>
		<TextView 
		    android:id="@+id/tvYuyueCitySelcet"
		    android:background="#fbfafa"
		    android:layout_alignParentLeft="true"
		    android:layout_width="80dp"
		    android:layout_height="match_parent"
		    android:textColor="@color/orange_main"
		    android:textSize="20sp"
		    android:text="潍坊"
		    android:layout_margin="4dp"
		    android:gravity="center"
		    />
		 <View 
   		      android:id="@+id/ztempLine2"
   		       android:layout_width="1px"
   			 android:layout_height="match_parent"
   			 android:background="@color/gray_font"
   			 android:layout_marginTop="4dp"
   			 android:layout_marginBottom="4dp"
   			 android:layout_marginLeft="-4.5dp"
   			 android:layout_toRightOf="@id/tvYuyueCitySelcet"
   		      />
    </RelativeLayout>

<TextView
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/orange_main"
    android:layout_margin="25dp"
    android:text="确认发送"
    android:gravity="center"
    android:textSize="@dimen/activity_title_size"
    android:textColor="@color/white"
    android:layout_alignParentBottom="true"
     />

</RelativeLayout>
