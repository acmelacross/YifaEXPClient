<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

<TextView 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="请选择货物重量/体积"
    android:textColor="@color/black"
    android:textSize="18sp"
    android:gravity="center"
    android:layout_margin="20dp"
    />
    <LinearLayout
         android:layout_width="match_parent"
    android:layout_height="wrap_content"
          android:gravity="center"
          android:orientation="horizontal"
          android:layout_marginBottom="20dp"
         >
        <TextView 
            android:id="@+id/tv_huo_ZhongZhonghuo"
            android:layout_width="60dp"
  			android:layout_height="30dp"
  			android:background="@color/orange_main"
  			android:textColor="@color/white"
  			android:text="重货"
  			 android:gravity="center"
  			 android:layout_marginRight="30dp"
            />
          <TextView 
              android:id="@+id/tv_huo_ZhongPaoHuo"
            android:layout_width="60dp"
  			android:layout_height="30dp"
  			android:textColor="@color/black"
  			android:text="轻货"
  			 android:gravity="center"
  			 android:layout_marginLeft="30dp"
            />
        
    </LinearLayout>
    
      <LinearLayout
         android:layout_width="match_parent"
    android:layout_height="wrap_content"
          android:gravity="center"
          android:orientation="horizontal"
          android:layout_marginBottom="-70dp"
         >
        <EditText 
            android:id="@+id/ed_Huo_Zhong"
            android:layout_width="250dp"
  			android:layout_height="40dp"
  			android:textColor="@color/black"
  			 android:gravity="center"
  			 android:background="@drawable/input_text_orange_border"
  			 android:padding="5dp"
  			 android:hint="请输入货物重量"
  			  android:textSize="17sp"
  			   android:numeric="decimal"    
            />
          <TextView 
              android:id="@+id/tv_Huo_danwei"
            android:layout_width="wrap_content"
  			android:layout_height="30dp"
  			android:textColor="@color/black"
  			android:text="吨"
  			 android:gravity="center"
  			  android:textSize="17sp"
  			  android:layout_marginLeft="-55dp"
            /> 
    </LinearLayout>
    
        <TextView 
             android:id="@+id/tv_Huo_confirm"
            android:layout_width="260dp"
  			android:layout_height="50dp"
  			android:background="@color/orange_main"
  			android:textColor="@color/white"
  			android:text="确定"
  			 android:gravity="center"
  			 android:layout_gravity="center"
  			  android:textSize="17sp"
  			  android:layout_margin="100dp"
            />
        
</LinearLayout>