<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:paddingLeft="10dp"
 android:background="@color/white"
    android:orientation="vertical" >
<ImageView 
     android:id="@+id/tv_listitem_img"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:background="@drawable/bg"
    android:layout_margin="10dp"
    />

<TextView
    android:id="@+id/tv_listitem_juli"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="80dp"
    android:gravity="center"
    android:layout_alignParentTop="true"
    android:text="0.2km"
    android:textColor="@color/orange_main" />

<TextView
    android:id="@+id/tv_listitem_mobile"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="80dp"
    android:gravity="center"
    android:layout_centerVertical="true"
    android:textColor="@color/black_font" />
    
    <TextView
    android:id="@+id/tv_listitem_price"    
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="80dp"
    android:layout_alignParentBottom="true"
    android:text="价格每公里"
    android:gravity="center"
      android:layout_marginBottom="10dp"
    android:textColor="@color/red2" />
       <TextView
    android:id="@+id/tv_listitem_daofu"    
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_marginLeft="80dp"
    android:layout_centerVertical="true"
    android:layout_alignParentRight="true"
    android:background="@drawable/ic_order_huodaofukuan"
     android:layout_marginBottom="10dp"
     android:layout_marginRight="20dp"
    android:textColor="@color/gray_holo_dark" />
</RelativeLayout>